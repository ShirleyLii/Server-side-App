@{
    ViewBag.Title = "Registration";
}

<h2> @ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { Id = "Form1" }))
{

<fieldset>
    <legend> Provide User Information </legend>
    <p> 
        Choose a user id:
        @Html.TextBox("Userid")
    </p>
    <p>
        Check if visually impaired:
        @Html.CheckBox("ADA")
    </p>
    <input type="submit" value= "Register"/>
</fieldset>


}

